<resources>
    <!-- Base application theme. -->
    <style name="Theme.Arithmometer20" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/prime_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:windowBackground">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextStyle">@style/screen_theme</item>
        <item name="materialButtonStyle">@style/button_m_style</item>
    </style>

    <style name="button_m_style">
        <item name="android:backgroundTint">@color/prime_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:textSize">@dimen/button_textsize</item>
    </style>

    <style name="screen_theme">
        <item name="android:background">@drawable/calc_screen</item>
    </style>
</resources>